<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManager.View"
        xmlns:Model="clr-namespace:OrderManager.Model" x:Class="OrderManager.View.CreateExecutor"
        xmlns:Behaviors="clr-namespace:OrderManager.ViewModel.Behaviors.CreateExecutor"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="CreateExecutor" Width="630" Height="480">

    <Window.DataContext>
        <Model:Executor/>
    </Window.DataContext>

    <StackPanel Width="600" HorizontalAlignment="Left">
        <local:ExecutorControl Margin="5"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Content="Создать" Margin="5" Height="20" Width="70">
                <i:Interaction.Behaviors>
                    <Behaviors:CreateExecutorBehavior/>
                </i:Interaction.Behaviors>
            </Button>
            <Button Content="Отмена" Margin="5" Height="20" Width="70">
                <i:Interaction.Behaviors>
                    <Behaviors:CancelExecutorBehavior/>
                </i:Interaction.Behaviors>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
