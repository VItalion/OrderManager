<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManager.View"
        xmlns:ViewModel="clr-namespace:OrderManager.ViewModel" x:Class="OrderManager.View.OrderManagerWindow"
        xmlns:Application="clr-namespace:OrderManager.ViewModel.Behaviors"
        xmlns:TypeTab="clr-namespace:OrderManager.ViewModel.Behaviors.TypeTab"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d" Height="600" Width="850" Title="Менеджер заказов" ResizeMode="CanMinimize">
    <i:Interaction.Behaviors>
        <Application:ApplicationBehavior/>
    </i:Interaction.Behaviors>
    <TabControl>
        <TabItem Header="Проекты">
            <local:ProjectTab/>
        </TabItem>
        <TabItem Header="Персоны">
            <local:PersonTab/>
        </TabItem>
        <TabItem x:Name="newTabItem" Header="+">
            <i:Interaction.Behaviors>
                <TypeTab:TabBehavior/>
            </i:Interaction.Behaviors>
        </TabItem>
    </TabControl>    
</Window>
