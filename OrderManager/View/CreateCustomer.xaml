<Window x:Class="OrderManager.View.CreateCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OrderManager.View"
        xmlns:Model="clr-namespace:OrderManager.Model"
        xmlns:Customer="clr-namespace:OrderManager.ViewModel.Behaviors.CreateCustomer"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        mc:Ignorable="d"
        Title="CreateCustomer" Height="500" Width="630">
    <StackPanel MinWidth="280">
        <local:CustomerControl DataContext="{Binding}"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Создать" Margin="5">
                <i:Interaction.Behaviors>
                    <Customer:CreateCustomerBehavior/>
                </i:Interaction.Behaviors>
            </Button>
            <Button Content="Отмена" Margin="5">
                <i:Interaction.Behaviors>
                    <Customer:CancelCustomerBehavior/>
                </i:Interaction.Behaviors>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
