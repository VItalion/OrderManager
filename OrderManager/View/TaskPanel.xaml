<UserControl x:Class="OrderManager.View.TaskPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrderManager.View"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:Behavior="clr-namespace:OrderManager.ViewModel.Behaviors.TaskControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <local:TaskControl/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Ок" Width="70" Margin="5" IsEnabled="False">
                <i:Interaction.Behaviors>
                    <Behavior:SaveChangeBehavior/>
                </i:Interaction.Behaviors>
            </Button>
            <Button Content="Отмена" Width="70" Margin="5" IsEnabled="False">
                <i:Interaction.Behaviors>
                    <Behavior:CancelChangeBehavior/>
                </i:Interaction.Behaviors>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
